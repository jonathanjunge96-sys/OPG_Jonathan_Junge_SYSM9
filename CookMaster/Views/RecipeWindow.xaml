<Window x:Class="CookMaster.Views.RecipeListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CookMaster - Mina Recept" Height="600" Width="700"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Översta raden: användarnamn och navigering -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Right" Margin="0,0,0,10">
            <TextBlock Text="Inloggad som: " FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock Text="{Binding LoggedInUsername}" FontWeight="Bold" Foreground="DarkBlue" Margin="5,0,20,0"/>
            <Button Content="User" Command="{Binding OpenUserCommand}" Margin="5"/>
            <Button Content="Info" Command="{Binding ShowInfoCommand}" Margin="5"/>
            <Button Content="Sign Out" Command="{Binding SignOutCommand}" Margin="5"/>
        </StackPanel>

        <!-- Filterrad -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Kategori:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox Width="100" ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}" Margin="0,0,10,0"/>

            <TextBlock Text="Datum:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <DatePicker SelectedDate="{Binding SelectedDate}" Margin="0,0,10,0"/>

            <TextBlock Text="Sök titel:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Width="120" Text="{Binding SearchText}" Margin="0,0,10,0"/>

            <Button Content="Filtrera" Command="{Binding FilterCommand}" Background="LightGray"/>
        </StackPanel>

        <!-- Receptlista -->
        <ListBox Grid.Row="2" ItemsSource="{Binding Recipes}" SelectedItem="{Binding SelectedRecipe}" DisplayMemberPath="Name" Margin="0,0,0,10"/>

        <!-- Knapprad -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Add Recipe" Command="{Binding AddRecipeCommand}" Background="LightGreen" Margin="5"/>
            <Button Content="Details" Command="{Binding ShowDetailsCommand}" Background="LightBlue" Margin="5"/>
            <Button Content="Remove" Command="{Binding RemoveRecipeCommand}" Background="LightCoral" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>


