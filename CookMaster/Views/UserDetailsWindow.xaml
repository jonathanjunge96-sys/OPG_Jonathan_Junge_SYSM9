<Window x:Class="CookMaster.Views.UserDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Användarinställningar" Height="350" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Nuvarande användarnamn och land -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Nuvarande användarnamn: " FontWeight="Bold"/>
            <TextBlock Text="{Binding CurrentUsername}" Foreground="DarkBlue"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Nuvarande land: " FontWeight="Bold"/>
            <TextBlock Text="{Binding CurrentCountry}" Foreground="DarkGreen"/>
        </StackPanel>

        
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Nytt användarnamn:"/>
            <TextBox Text="{Binding NewUsername}" />
        </StackPanel>

        <!-- Nytt lösenord -->
        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="Nytt lösenord:"/>
            <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged"/>
        </StackPanel>

        
        <StackPanel Grid.Row="4" Margin="0,0,0,10">
            <TextBlock Text="Bekräfta lösenord:"/>
            <PasswordBox x:Name="ConfirmBox" PasswordChanged="ConfirmBox_PasswordChanged"/>
        </StackPanel>

        
        <StackPanel Grid.Row="5" Margin="0,0,0,10">
            <TextBlock Text="Land:"/>
            <ComboBox ItemsSource="{Binding Countries}" SelectedItem="{Binding SelectedCountry}" />
        </StackPanel>

        
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Spara" Command="{Binding SaveCommand}" Margin="5"/>
            <Button Content="Avbryt" Command="{Binding CancelCommand}" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>

