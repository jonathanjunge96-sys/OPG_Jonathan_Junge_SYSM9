<Window x:Class="CookMaster.Views.AddRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lägg till recept" Height="400" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Titel:" Grid.Row="0"/>
        <TextBox Grid.Row="0" Margin="60,0,0,0"
                 Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Width="300"/>

        <TextBlock Text="Ingredienser:" Grid.Row="1" Margin="0,10,0,0"/>
        <TextBox Grid.Row="1" Margin="60,10,0,0"
                 Text="{Binding Ingredients, UpdateSourceTrigger=PropertyChanged}" Width="300"/>

        <TextBlock Text="Instruktioner:" Grid.Row="2" Margin="0,10,0,0"/>
        <TextBox Grid.Row="2" Margin="60,10,0,0"
                 Text="{Binding Instructions, UpdateSourceTrigger=PropertyChanged}" Width="300"/>

        <TextBlock Text="Kategori:" Grid.Row="3" Margin="0,10,0,0"/>
        <ComboBox Grid.Row="3" Margin="60,10,0,0" Width="150"
                  ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}"/>

        <TextBlock Text="Datum:" Grid.Row="4" Margin="0,10,0,0"/>
        <DatePicker Grid.Row="4" Margin="60,10,0,0"
                    SelectedDate="{Binding SelectedDate}" Width="150" IsEnabled="False"/>

        <TextBlock Grid.Row="5" Text="{Binding Message}" Foreground="Red" Margin="0,10,0,0"/>

        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Spara" Command="{Binding SaveCommand}" Width="100" Margin="10"/>
            <Button Content="Avbryt" Command="{Binding CancelCommand}" Width="100" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
